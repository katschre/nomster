<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'slider1.jpg' %>
      <div class="carousel-caption">
        Find the best of the best for eating all the things
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider3.jpg' %>
      <div class="carousel-caption">
        More of a pancake person?
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>


<% @places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br />

    <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>

  <% if place.comments.present? %>
    <div class="col-xs-12">
      <blockquote>
                    <% if place.comments.present? && place.comments.last.humanized_rating.present? %>
                        <b><%= place.comments.last.humanized_rating %> </b>-
                    <% end %>

                    <% if place.comments.present?%>
                        <%= place.comments.last.message %>
                        <% if place.comments.last.user.present? %>
                            <small><%= place.comments.last.user.email %></small>
                        <% end %>
                    <% end %>
      </blockquote>
    </div>
  <% end %>

  <% if place.photos.present? %>
    <div class="col-xs-12 col-sm-6">
        <%= image_tag place.photos.last.avatar %>
        <small><%= place.photos.last.caption %></small>
    </div>
  <% end %>

  </div>
<% end %>